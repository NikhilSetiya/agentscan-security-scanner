{
  "name": "agentscan-security",
  "displayName": "AgentScan Security",
  "description": "Real-time security scanning with multi-agent consensus",
  "version": "0.1.0",
  "publisher": "agentscan",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "security",
    "sast",
    "vulnerability",
    "scanning",
    "javascript",
    "typescript",
    "python",
    "go"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java",
    "onCommand:agentscan.scanFile",
    "onCommand:agentscan.scanWorkspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentscan.scanFile",
        "title": "Scan Current File",
        "category": "AgentScan",
        "icon": "$(shield)"
      },
      {
        "command": "agentscan.scanWorkspace",
        "title": "Scan Workspace",
        "category": "AgentScan",
        "icon": "$(search)"
      },
      {
        "command": "agentscan.clearFindings",
        "title": "Clear All Findings",
        "category": "AgentScan",
        "icon": "$(clear-all)"
      },
      {
        "command": "agentscan.showSettings",
        "title": "Open Settings",
        "category": "AgentScan",
        "icon": "$(settings-gear)"
      },
      {
        "command": "agentscan.suppressFinding",
        "title": "Suppress Finding",
        "category": "AgentScan",
        "icon": "$(eye-closed)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "agentscan.scanFile",
          "group": "agentscan",
          "when": "resourceExtname =~ /\\.(js|ts|py|go|java)$/"
        },
        {
          "command": "agentscan.suppressFinding",
          "group": "agentscan",
          "when": "agentscan.hasFinding"
        }
      ],
      "explorer/context": [
        {
          "command": "agentscan.scanFile",
          "group": "agentscan",
          "when": "resourceExtname =~ /\\.(js|ts|py|go|java)$/"
        }
      ],
      "commandPalette": [
        {
          "command": "agentscan.scanFile",
          "when": "editorIsOpen"
        },
        {
          "command": "agentscan.scanWorkspace",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "agentscanFindings",
          "name": "Security Findings",
          "when": "agentscan.hasFindings"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentscan",
          "title": "AgentScan Security",
          "icon": "$(shield)"
        }
      ]
    },
    "configuration": {
      "title": "AgentScan Security",
      "properties": {
        "agentscan.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "AgentScan server URL"
        },
        "agentscan.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AgentScan server authentication"
        },
        "agentscan.enableRealTimeScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time scanning on file save"
        },
        "agentscan.scanDebounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce delay for real-time scanning (milliseconds)"
        },
        "agentscan.enabledLanguages": {
          "type": "array",
          "default": ["javascript", "typescript", "python", "go", "java"],
          "description": "Languages to scan for security issues"
        },
        "agentscan.severityThreshold": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "default": "medium",
          "description": "Minimum severity level to show findings"
        },
        "agentscan.showInlineAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline security annotations in editor"
        },
        "agentscan.enableWebSocket": {
          "type": "boolean",
          "default": true,
          "description": "Enable WebSocket connection for real-time updates"
        }
      }
    },
    "colors": [
      {
        "id": "agentscan.errorHighlight",
        "description": "Color for high severity security findings",
        "defaults": {
          "dark": "#ff6b6b",
          "light": "#e74c3c",
          "highContrast": "#ff0000"
        }
      },
      {
        "id": "agentscan.warningHighlight",
        "description": "Color for medium severity security findings",
        "defaults": {
          "dark": "#ffa726",
          "light": "#f39c12",
          "highContrast": "#ffaa00"
        }
      },
      {
        "id": "agentscan.infoHighlight",
        "description": "Color for low severity security findings",
        "defaults": {
          "dark": "#42a5f5",
          "light": "#3498db",
          "highContrast": "#0088ff"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^9.1.1",
    "@types/ws": "^8.5.4",
    "@types/glob": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NikhilSetiya/agentscan-security-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/NikhilSetiya/agentscan-security-scanner/issues"
  },
  "homepage": "https://github.com/NikhilSetiya/agentscan-security-scanner#readme",
  "license": "MIT"
}