{
  "name": "agentscan-security-tests",
  "version": "1.0.0",
  "description": "Security testing suite for AgentScan",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:security": "jest --testPathPattern=security",
    "test:auth": "jest --testPathPattern=auth-security",
    "test:api": "jest --testPathPattern=api-security",
    "test:injection": "jest --testPathPattern=injection",
    "test:xss": "jest --testPathPattern=xss",
    "pentest": "node penetration-tests/run-pentest.js",
    "zap-scan": "node zap-integration/zap-scan.js",
    "vulnerability-scan": "npm audit && snyk test",
    "security-report": "node reports/generate-security-report.js"
  },
  "keywords": ["security", "penetration-testing", "vulnerability-assessment"],
  "author": "AgentScan Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "supertest": "^6.3.3",
    "puppeteer": "^21.3.6",
    "zaproxy": "^0.2.0",
    "sqlmap": "^1.0.0",
    "nmap": "^2.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "faker": "^6.6.6",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}